
        <section class="pt-150 pb-150">
            <div style="margin-top:4rem; min-height:80vh; height:max-content; width:100vw">
                <div class="row">
                    <div class="col-lg-11 m-auto">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="dashboard-menu">
                                    <ul class="nav flex-column" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="dashboard-tab" href="/account" role="tab" aria-controls="dashboard" aria-selected="false"><i class="fi-rs-settings-sliders mr-10"></i>Dashboard</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" id="orders-tab" href="/orders" role="tab" aria-controls="orders" aria-selected="false"><i class="fi-rs-shopping-bag mr-10"></i>Orders</a>
                                        </li>
                                        {{!-- <li class="nav-item">
                                            <a class="nav-link" id="track-orders-tab" data-bs-toggle="tab" href="#track-orders" role="tab" aria-controls="track-orders" aria-selected="false"><i class="fi-rs-shopping-cart-check mr-10"></i>Track Your Order</a>
                                        </li> --}}
                                        <li class="nav-item">
                                            <a class="nav-link" id="address-tab" href="/addresses" role="tab" aria-controls="address" aria-selected="true"><i class="fi-rs-marker mr-10"></i>My Address</a>
                                        </li>
                                        {{!-- <li class="nav-item">
                                            <a class="nav-link" id="account-detail-tab" href="/profile" role="tab" aria-controls="account-detail" aria-selected="true"><i class="fi-rs-user mr-10"></i>My Account</a>
                                        </li> --}}
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-8 m-t-3">
                                <div class="tab-content dashboard-content">
                                    <div class="tab-pane fade active show" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                                        <div class="card">
                                            <div class="card-header">
                                                <h5 class="mb-0">Hello {{userName}} !!</h5>
                                            </div>
                                            <div class="card-body">
                                                <p>From your account dashboard. you can easily check &amp; view your <a href="/orders">recent orders</a>, manage your <a href="/addresses">shipping addresses</a> and <a href="/profile">edit your account details.</a></p>
                                            </div>
                                        </div>
                                        {{#if wallet}}
                                            <h3 class="card-body">Wallet Rs.<span id="walletAmount">{{wallet.balance}}</span></h3>
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th>No.</th>
                                                                <th>Type</th>
                                                                <th>Amount</th>
                                                                <th>Date</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            {{#each wallet.transactions}}
                                                            <tr>
                                                                <td>{{inc @index}}</td>
                                                                <td>{{this.type}}</td>
                                                                <td>₹{{this.amount}}</td>
                                                                <td>{{this.date}}</td>
                                                            </tr>
                                                            {{/each}}
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        {{else}}
                                            <h3 class="card-body">Wallet is empty</h3>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    
    