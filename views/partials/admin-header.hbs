					<a href='/admin' class="logo {{#if dashPage}}active{{/if}}">BigShopper Admin</a>

					{{#if adminLog}}
					<!-- Menu desktop -->
						<div class="menu-desktop">
							<ul class="main-menu">
								<li>
									<a href='/admin/user-management' class="{{#if userPage}}active{{/if}}">Users</a>
								</li>

								<li>
