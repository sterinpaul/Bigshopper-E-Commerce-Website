        function phoneAuth(phoneNumber){
            var number = "+91"+phoneNumber
			mobileEntered = true
            firebase.auth().signInWithPhoneNumber(number,window.recaptchaVerifier).then(function(confirmationResult){
                window.confirmationResult = confirmationResult;
                coderesult = confirmationResult;
				const userAuthStatusElements = document.getElementsByClassName('userAuthStatus')
				if(userAuthStatusElements.length){
					for(const element of userAuthStatusElements){
						element.style.display = 'none'
					}
				}

				const sender = document.getElementById('sender')
				const mobileNumInput = document.getElementById('mobile')
				const signupSendOtp = document.getElementById('signupSendOtp')
				if(sender) sender.style.display = 'none';
				if(signupSendOtp) signupSendOtp.style.display = 'none';
                if(mobileNumInput) mobileNumInput.readOnly = true;
                document.getElementById('verifier').style.display = 'flex';
            }).catch(function(error){
                console.log(error.message);
            });
        }
        
